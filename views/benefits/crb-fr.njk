  {{__("crb.header")}}
{% endblock %}

{% block featured_list_items %}
  {{ benefitLi("<strong>500 $ par semaine (avant impôt)</strong>") }}
  {{ benefitLi("<strong>300 $ par semaine (avant impôt) après le 18 juillet 2021 pour ceux qui présente une demande de prestations pour plus de 42 semaines et ceux qui font une demande la première fois</strong>") }}
  {{ benefitLi("<strong>Maximum de 42 semaines </strong> si vous respectez les critères d’admissibilité") }}
